<h2>Product List</h2>

<p>
    <a id="btnCreate" href="#myCreateModal" data-toggle="modal" class="btn btn-success" data-bind="click: $root.showAddUI">Create New</a>

</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: Products">
        <tr>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Price"></td>
            <td>
                <a id="btnEdit" class="btn btn-info" data-toggle="modal" href="#myEditModal" data-bind="click: $root.showEditUI">Edit</a>
                <a id="btnDelete" class="btn btn-danger" data-toggle="modal" href="#myDeleteModal" data-bind="click: $root.showDeleteUI">Delete</a>
            </td>
        </tr>
    </tbody>

</table>

<div id="myCreateModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create New Product</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content" data-bind="with: Product">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "")

                        <div class="row form-group">
                            <label for="name" class="col-sm-2">Name</label>
                            <input data-bind="value: Name, valueUpdate: 'afterkeydown'" type="text" class="form-control" title="Name" />

                        </div>
                        <br />
                        <div class="row form-group">
                            <label for="price" class="col-sm-2">Price</label>
                            <input data-bind="value: Price, valueUpdate: 'afterkeydown'" type="text" class="form-control" title="Price" />

                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-success col-sm-offset-2" data-bind="click: $root.create">Save</button>
                            <button class="btn btn-info" data-dismiss="modal" data-bind="click: $root.reset">Close</button>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>
<div id="myEditModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Product</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content" data-bind="with: Product">
                    <div class="row">
                        <label for="productId" class="col-sm-2">ID</label>
                        <label data-bind="text: Id"></label>
                    </div>
                    <br />
                    <div class="row">
                        <label for="name" class="col-sm-2">Name</label>
                        <input data-bind="value: Name, valueUpdate: 'afterkeydown'" type="text" title="Name" />

                    </div>
                    <br />
                    <div class="row">
                        <label for="price" class="col-sm-2">Price</label>
                        <input data-bind="value: Price, valueUpdate: 'afterkeydown'" type="text" title="Price" />

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success col-sm-offset-2" data-dismiss="modal" data-bind="click: $root.update">Update</button>
                        <button class="btn btn-info" data-dismiss="modal">Cancel</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myDeleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Product</h4>
            </div>
            <div class="modal-body">
                <div id="modal-content" data-bind="with: Product">
                    <div class="row">
                        <label for="productId" class="col-sm-2">ID</label>
                        <label data-bind="text: Id"></label>

                    </div>
                    <div class="row">
                        <label for="name" class="col-sm-2">Name</label>
                        <label data-bind="text: Name"></label>
                    </div>

                    <div class="row">
                        <label for="price" class="col-sm-2">Price</label>
                        <label data-bind="text: Price"></label>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success col-sm-offset-2" data-dismiss="modal" data-bind="click: $root.delete">Delete</button>
                        <button class="btn btn-info" data-dismiss="modal">Cancel</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/App/Product.js"></script>
}